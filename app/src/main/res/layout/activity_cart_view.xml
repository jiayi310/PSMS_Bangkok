<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="defaultCurr"
            type="String" />
        <variable
            name="handler"
            type="com.example.androidmobilestock.CartView.MyClickHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:background="#F7F7F7"
        tools:context=".CartView">


        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/searchField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:ems="10"
                android:fontFamily="@font/robotolight"
                android:hint="Search"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:selectAllOnFocus="true"
                android:textSize="16dp"
                app:layout_constraintEnd_toStartOf="@+id/imageButtonScan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/filter"
                android:onClick="@{handler::OnFilterButtonClicked}"
                app:layout_constraintBottom_toBottomOf="@+id/searchField"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/searchField"
                tools:ignore="MissingConstraints" />

            <ImageButton
                android:id="@+id/imageButtonScan"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/scan"
                android:onClick="@{handler::OnItemCameraClicked}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageButton"
                app:layout_constraintTop_toTopOf="@+id/searchField"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>



        <LinearLayout
            android:id="@+id/linearLayout_1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="#F7F7F7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_noProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No products found"
                android:gravity="center"
                android:layout_margin="20dp"
                />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/GridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="#F7F7F7"
                android:gravity="center">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>