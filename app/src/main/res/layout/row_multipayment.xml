<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="payment"
            type="com.example.androidmobilestock.AC_Class.Payment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_payment_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            app:fontFamily="@font/merriweather_bold"
            android:gravity="center_horizontal"
            android:hint="Payment Type"
            android:padding="5dp"
            android:text="@={payment.PaymentMethod}"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_payment_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            app:fontFamily="@font/merriweather_bold"
            android:gravity="center_horizontal"
            android:hint="Payment Amount"
            android:padding="5dp"
            android:text='@{String.format("%.2f", payment.PaymentAmt)}'
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>
</layout>