<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Jobsheet_AddNew2"
    android:padding="15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout68"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/js_docNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="JS no."
                android:textColor="#FF0011"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                app:fontFamily="serif-monospace"/>

            <TextView
                android:id="@+id/lbl_DocDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Date"
                android:textColor="@color/apricot"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:paddingBottom="3dp"
                android:textStyle="bold"
                app:fontFamily="@font/merriweather_bold"/>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_DocDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:background="@drawable/bg_cart_green_border"
                    android:padding="6dp"
                    android:layout_marginStart="5dp"
                    android:paddingStart="12dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:fontFamily="@font/caudex_bold"
                    app:layout_constraintRight_toLeftOf="@+id/btn_DocDate"/>

                <ImageButton
                    android:id="@+id/btn_DocDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/date_vector_green"/>
            </LinearLayout>

            <TextView
                android:id="@+id/lbl_workType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:layout_marginTop="10dp"
                android:text="Work Type"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                app:fontFamily="@font/merriweather_bold" />

            <TextView
                android:id="@+id/tv_workType"
                style="@android:style/Widget.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/bg_cart_orange_border"
                android:drawableRight="@drawable/rightarrowvector"
                android:padding="6dp"
                android:paddingStart="12dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:fontFamily="@font/caudex_bold" />

            <EditText
                android:id="@+id/editText_workType"
                style="@android:style/Widget.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/bg_cart_orange_border"
                android:inputType="textNoSuggestions"
                android:maxLines="1"
                android:padding="6dp"
                android:maxLength="100"
                android:paddingStart="12dp"
                android:hint="Enter Work Type"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:fontFamily="@font/caudex_bold"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/lbl_replacementType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="3dp"
                android:text="Replacement Type"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                app:fontFamily="@font/merriweather_bold" />

            <TextView
                android:id="@+id/tv_replacementType"
                style="@android:style/Widget.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/bg_cart_orange_border"
                android:drawableRight="@drawable/rightarrowvector"
                android:padding="6dp"
                android:paddingStart="12dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:fontFamily="@font/caudex_bold" />

            <TextView
                android:id="@+id/lbl_timeIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="3dp"
                android:text="Time In"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                app:fontFamily="@font/merriweather_bold"/>

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_timeIn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:background="@drawable/bg_cart_green_border"
                    android:padding="6dp"
                    android:layout_marginStart="5dp"
                    android:paddingStart="12dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:fontFamily="@font/caudex_bold"/>

                <ImageButton
                    android:id="@+id/btn_timeIn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/baseline_access_time_24"/>
            </LinearLayout>

            <TextView
                android:id="@+id/lbl_timeOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="3dp"
                android:text="Time Out"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                app:fontFamily="@font/merriweather_bold" />

            <LinearLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_timeOut"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:background="@drawable/bg_cart_green_border"
                    android:padding="6dp"
                    android:layout_marginStart="5dp"
                    android:paddingStart="12dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:fontFamily="@font/caudex_bold"/>

                <ImageButton
                    android:id="@+id/btn_timeOut"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/baseline_access_time_24"/>
            </LinearLayout>

            <TextView
                android:id="@+id/lbl_problem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="3dp"
                android:text="Problem"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                app:fontFamily="@font/merriweather_bold" />

            <EditText
                android:id="@+id/editText_problem"
                style="@android:style/Widget.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/bg_cart_orange_border"
                android:inputType="textMultiLine|textNoSuggestions"
                android:maxLines="10"
                android:minLines="3"
                android:padding="6dp"
                android:maxLength="250"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:fontFamily="@font/caudex_bold"/>

            <TextView
                android:id="@+id/lbl_resolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="3dp"
                android:text="Resolution"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                app:fontFamily="@font/merriweather_bold" />

            <EditText
                android:id="@+id/editText_resolution"
                style="@android:style/Widget.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/bg_cart_orange_border"
                android:inputType="textMultiLine|textNoSuggestions"
                android:maxLines="10"
                android:minLines="3"
                android:padding="6dp"
                android:maxLength="250"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:fontFamily="@font/caudex_bold"/>

            <TextView
                android:id="@+id/lbl_remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="3dp"
                android:text="Remarks"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                app:fontFamily="@font/merriweather_bold" />

            <EditText
                android:id="@+id/editText_remarks"
                style="@android:style/Widget.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_cart_orange_border"
                android:inputType="textMultiLine|textNoSuggestions"
                android:maxLines="10"
                android:minLines="3"
                android:padding="6dp"
                android:maxLength="250"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:fontFamily="@font/caudex_bold"/>

            <ImageView
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="20dp"
                android:src="@drawable/uploadimage"
                android:padding="5dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </ScrollView>



    <LinearLayout
        android:id="@+id/layout68"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_Item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Add Item"
                    android:textSize="18sp"
                    android:background="@color/red5"
                    android:textColor="@color/white"
                    android:layout_margin="2dp" />

                <Button
                    android:id="@+id/btnSignature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Signature"
                    android:textSize="18sp"
                    android:background="@color/red5"
                    android:textColor="@color/white"
                    android:layout_margin="2dp" />


                <ImageView
                    android:id="@+id/ivSign"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="@+id/btnSignature"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btnSignature"
                    app:layout_constraintTop_toTopOf="@+id/btnSignature" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_Create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" Create Job Sheet"
                android:textSize="18sp"
                android:background="@color/red5"
                android:textColor="@color/white"
                android:layout_margin="2dp"/>

        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>